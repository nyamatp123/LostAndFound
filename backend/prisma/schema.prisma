generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int            @id @default(autoincrement())
  email         String         @unique
  name          String
  phone         String?
  university    String?
  passwordHash  String
  createdAt     DateTime       @default(now())
  items         Item[]
  notifications Notification[]
}

model Item {
  id              Int      @id @default(autoincrement())
  userId          Int
  type            String
  title           String
  description     String
  category        String
  attributes      Json
  location        Json
  timestamp       DateTime
  imageUrls       Json
  textEmbedding   Json
  imageEmbeddings Json
  status          String   @default("active")
  createdAt       DateTime @default(now())
  user            User     @relation(fields: [userId], references: [id])
  foundMatches    Match[]  @relation("foundMatches")
  lostMatches     Match[]  @relation("lostMatches")
}

model Match {
  id                   Int       @id @default(autoincrement())
  lostItemId           Int
  foundItemId          Int
  confidence           Float
  breakdown            Json
  explanation          String
  status               String    @default("pending")
  confirmedByLostUser  Boolean   @default(false)
  confirmedByFoundUser Boolean   @default(false)
  proofDetails         String?
  // Scheduling and return method fields
  lostUserPreference   String?   // 'in_person', 'local_lost_and_found', 'no_preference'
  foundUserPreference  String?   // 'in_person', 'local_lost_and_found', 'no_preference'
  resolvedReturnMethod String?   // The final determined method after both submit
  returnLocation       String?   // L&F location name/id if applicable
  notifiedAt           DateTime? // When the finder was notified to drop off
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  foundItem            Item      @relation("foundMatches", fields: [foundItemId], references: [id])
  lostItem             Item      @relation("lostMatches", fields: [lostItemId], references: [id])
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int
  type      String
  title     String
  message   String
  data      Json
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}
